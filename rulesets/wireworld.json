{
    "default_state": "empty",
    "neighbourhood": {
        "Moore": {
            "range": 1,
            "include_self": false
        }
    },
    "states": {
        "empty": {
            "colour": [0, 0, 0, 255],
            "rules": {}
        },
        "head": {
            "colour": [0, 0, 255, 255],
            "rules": {},
            "otherwise": {
                "next": "tail"
            }
        },
        "tail": {
            "colour": [255, 0, 0, 255],
            "rules": {},
            "otherwise": {
                "next": "conductor"
            }
        },
        "conductor": {
            "colour": [255, 255, 0, 255],
            "rules": {
                "$head >= 1 ; $head <= 2": {
                    "next": "head"
                }
            }
        }
    }
}